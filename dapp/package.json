{
  "name": "guestbook-dapp",
  "version": "1.0.3",
  "description": "A guestbook decentralized app for ethereum",
  "author": "ab22uhrnachtunruhe@gmail.com",
  "license": "MIT",
  "scripts": {
    "develop": "yarn truffle develop --log",
    "compile": "yarn truffle compile",
    "test": "yarn docker yarn truffle test",
    "docker": "CURRENT_UID=$(id -u):$(id -g) docker-compose run --workdir='/home/node/dapp' runner",
    "migrate": "yarn truffle migrate",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "yarn create:contracts",
    "create:contracts": "yarn typechain --outDir dist --target=truffle-v5 './build/contracts/*.json'"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^2.0.2",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/node": "^14.11.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "truffle": "^5.1.45",
    "typechain": "^2.0.0",
    "typescript": "^4.0.3"
  }
}

{
  "name": "@solidity-guestbook-example/dapp",
  "version": "0.1.0",
  "description": "The decentralized backend application.",
  "author": "ab22uhrnachtunruhe@gmail.com",
  "scripts": {
    "develop": "yarn truffle develop --log",
    "test": "yarn docker yarn truffle test",
    "docker": "CURRENT_UID=$(id -u):$(id -g) docker-compose run --workdir='/home/node/packages/dapp' runner",
    "migrate": "yarn truffle migrate",
    "clean": "rm -rf ./build ./dist",
    "prebuild": "yarn clean",
    "build": "yarn compile && yarn typechain",
    "compile": "yarn truffle compile",
    "typechain": "typechain --outDir ./dist --target=web3-v1 './build/contracts/*.json'"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^2.0.2",
    "@typechain/web3-v1": "^1.0.0",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^8.1.3",
    "typechain": "^2.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "truffle": "^5.1.45"
  }
}
